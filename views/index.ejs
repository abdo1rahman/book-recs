<%- include("partials/header.ejs") %> <% if (locals.books){ %>
<div class="container py-4">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <% books.forEach(book => { %>
    <div class="col">
      <div class="card h-100 shadow border-0">
        <img
          src="<%= book.cover_lnk %>"
          class="card-img-top img-fluid p-2"
          alt="Cover of <%= book.title %>"
          style="height: 300px; object-fit: contain"
        />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title text-primary fw-semibold"><%= book.title %></h5>
          <h6 class="card-text text-muted mb-1"><%= book.author_name %></h6>
          <p class="card-text text-muted mb-1">
            <strong>Genre:</strong> <%= book.genre_name %>
          </p>
          <p class="card-text text-muted mb-1">
            <strong>Rating:</strong> <%= book.rating %>
          </p>
          <% if (book.series) { %>
          <p class="card-text text-muted mb-0 fst-italic">
            #<%= book.series %>
          </p>
          <% } %>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>
<% } %> <%- include("partials/footer.ejs") %>
